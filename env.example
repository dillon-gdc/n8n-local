# n8n Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
# Set your local timezone (examples below)
# TIMEZONE=America/New_York      # Eastern Time
# TIMEZONE=America/Chicago       # Central Time  
# TIMEZONE=America/Denver        # Mountain Time
# TIMEZONE=America/Los_Angeles   # Pacific Time
# TIMEZONE=Europe/London         # GMT/BST
# TIMEZONE=Europe/Paris          # CET/CEST
# TIMEZONE=Asia/Tokyo            # JST
# TIMEZONE=Australia/Sydney      # AEST/AEDT
TIMEZONE=UTC

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# Enable/disable tunnel for OAuth (true/false)
N8N_TUNNEL_ENABLED=true

# Current tunnel URL (automatically updated by start.sh)
N8N_TUNNEL_URL=

# Webhook base path for external integrations
N8N_WEBHOOK_BASE_PATH=/webhook

# Set a custom encryption key for credentials (recommended for production)
# Generate with: openssl rand -hex 32
# N8N_ENCRYPTION_KEY=your-very-long-random-encryption-key-here

# Basic authentication (optional, for additional security)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your-secure-password

# =============================================================================
# DATABASE CONFIGURATION (Optional - uses SQLite by default)
# =============================================================================
# Uncomment and configure for PostgreSQL
# DB_TYPE=postgresdb
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=your-postgres-password
# DB_POSTGRESDB_SCHEMA=public

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Block access to environment variables from workflows (recommended)
N8N_BLOCK_ENV_ACCESS_IN_NODE=true

# Enable/disable telemetry data collection
N8N_DIAGNOSTICS_ENABLED=false

# Log level (error, warn, info, verbose, debug, silly)
N8N_LOG_LEVEL=info

# =============================================================================
# PERFORMANCE SETTINGS  
# =============================================================================
# Execution data retention
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_MAX_AGE=336  # Hours (14 days)

# Enable task runners (recommended)
N8N_RUNNERS_ENABLED=true

# SQLite connection pool size
DB_SQLITE_POOL_SIZE=10

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable workflow history (useful for version control)
N8N_WORKFLOW_HISTORY_ENABLED=true

# Enable metrics collection (for monitoring)
# N8N_METRICS=true

# Custom nodes path (if you use community nodes)
# N8N_CUSTOM_NODES_PATH=/opt/custom-nodes
